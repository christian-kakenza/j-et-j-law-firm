<script>
    // Retour en haut
    $(document).ready(function(){
        $(window).scroll(function(){
            if ($(this).scrollTop() > 100) {
                $('#backTotop').fadeIn();
            } else {
                $('#backTotop').fadeOut();
            }
        });
        
        $('#backTotop').click(function(){
            $("html, body").animate({ scrollTop: 0 }, 600);
            return false;
        });
    });
