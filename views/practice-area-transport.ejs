                                    <div class="col-md-4 mb-3">
                                        <div class="segment-card">
                                            <h6><i class="fas fa-water"></i> <%= __('practice_detail_transport.segment_2_title') %></h6>
                                            <p><%= __('practice_detail_transport.segment_2_desc') %></p>
