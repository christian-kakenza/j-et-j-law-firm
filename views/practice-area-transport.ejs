                                            <li>
                                                <i class="fas fa-ship"></i>
                                                <%= __('practice_detail_transport.service_2') %>
                                            </li>
                                            <li>
                                                <i class="fas fa-plane"></i>
                                                <%= __('practice_detail_transport.service_3') %>
                                            </li>
                                            <li>
                                                <i class="fas fa-file-invoice-dollar"></i>
                                                <%= __('practice_detail_transport.service_4') %>
                                            </li>
                                            <li>
                                                <i class="fas fa-gavel"></i>
                                                <%= __('practice_detail_transport.service_5') %>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
