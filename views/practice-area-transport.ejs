                                        <div class="industry-item">
                                            <i class="fas fa-tree"></i>
                                            <span><%= __('practice_detail_transport.industry_2') %></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="industry-item">
                                            <i class="fas fa-industry"></i>
                                            <span><%= __('practice_detail_transport.industry_3') %></span>
