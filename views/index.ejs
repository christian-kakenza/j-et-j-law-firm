       <!-- ============ SCRIPT DE GESTION DE LANGUE AVEC COOKIES ============ -->
        <script>
            (function() {
                'use strict';
                
                // Langue actuelle depuis le serveur
                const currentLocale = '<%= locale %>' || 'fr';
                
                // ========== FONCTION PRINCIPALE DE CHANGEMENT DE LANGUE ==========
                window.setLanguage = function(lang) {
                    // Validation
                    if (!['fr', 'en'].includes(lang)) {
                        console.error('Langue non support√©e:', lang);
                        return false;
                    }
                    
                    // √âviter de recharger si c'est la m√™me langue
                    if (lang === currentLocale) {
                        console.log('Langue d√©j√† active:', lang);
                        return false;
                    }
                    
                    console.log('üîÑ Changement de langue:', currentLocale, '‚Üí', lang);
                    
                    // Sauvegarder dans le cookie VIA LE SERVEUR
                    fetch('/set-language/' + lang, {
                        method: 'GET',
                        credentials: 'same-origin',
                        cache: 'no-cache'
                    })
                    .then(response => {
                        if (response.ok) {
                            console.log('‚úÖ Cookie langue mis √† jour:', lang);
                            
                            // Sauvegarder aussi dans localStorage
                            try {
                                localStorage.setItem('preferred-language', lang);
                            } catch(e) {
                                console.warn('localStorage non disponible');
                            }
                            
                            // Recharger la page pour appliquer la nouvelle langue
                            window.location.reload();
                        } else {
                            console.error('‚ùå Erreur serveur:', response.status);
                            // Fallback: redirection avec param√®tre URL
                            window.location.href = window.location.pathname + '?lang=' + lang;
                        }
                    })
                    .catch(error => {
                        console.error('‚ùå Erreur r√©seau:', error);
                        // Fallback: redirection avec param√®tre URL
                        window.location.href = window.location.pathname + '?lang=' + lang;
                    });
                    
                    return false;
                };
                
                // ========== INITIALISATION DU S√âLECTEUR DE LANGUE ==========
                function initLanguageSelector() {
                    const languageBtn = document.querySelector('.language-btn');
                    const languageDropdown = document.querySelector('.language-dropdown');
                    
                    if (languageBtn && languageDropdown) {
                        // Nettoyer les anciens listeners
                        const newBtn = languageBtn.cloneNode(true);
                        languageBtn.parentNode.replaceChild(newBtn, languageBtn);
                        const newDropdown = languageDropdown.cloneNode(true);
                        languageDropdown.parentNode.replaceChild(newDropdown, languageDropdown);
                        
                        // R√©attacher les √©v√©nements
                        const finalBtn = document.querySelector('.language-btn');
                        const finalDropdown = document.querySelector('.language-dropdown');
                        
                        if (finalBtn && finalDropdown) {
                            // Toggle dropdown
                            finalBtn.addEventListener('click', function(e) {
                                e.preventDefault();
                                e.stopPropagation();
                                const isVisible = finalDropdown.style.display === 'block';
                                finalDropdown.style.display = isVisible ? 'none' : 'block';
                            });
                            
                            // Fermer en cliquant ailleurs
                            document.addEventListener('click', function() {
                                if (finalDropdown) {
                                    finalDropdown.style.display = 'none';
                                }
                            });
                            
                            // Emp√™cher la fermeture quand on clique dans le dropdown
                            finalDropdown.addEventListener('click', function(e) {
                                e.stopPropagation();
                            });
                        }
                    }
                }
                
                // ========== CHARGEMENT INITIAL ==========
                document.addEventListener('DOMContentLoaded', function() {
                    initLanguageSelector();
                    console.log('üåê Langue active:', currentLocale, '(persistante avec cookies)');
                });
                
                // ========== SYNC LOCALSTORAGE ==========
                try {
                    const savedLang = localStorage.getItem('preferred-language');
                    if (savedLang && savedLang !== currentLocale && ['fr', 'en'].includes(savedLang)) {
                        console.log('üîÑ Synchronisation localStorage ‚Üí cookie:', savedLang);
                        fetch('/set-language/' + savedLang, { 
                            method: 'GET', 
                            credentials: 'same-origin',
                            cache: 'no-cache'
                        }).catch(() => {});
                    }
                } catch(e) {
                    // Ignorer erreurs localStorage
                }
                
            })();
        </script>

