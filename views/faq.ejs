                                </div>
                                
                                <!-- Message de confirmation -->
                                <div id="faq-message" style="display: none; background: #d4edda; color: #155724; padding: 15px; border-radius: 5px; margin-bottom: 20px; border-left: 4px solid #28a745;">
                                    <i class="fas fa-check-circle"></i> <%- __("faq_page.form.success_message") %>
                                </div>
                                
                                <form method="post" id="faq-form" action="/faq-question">
                                    <p>
                                        <input type="text" name="name" placeholder="<%= __("faq_page.form.name") %>" required>
                                    </p>
                                    <p>
                                        <input type="email" name="email" placeholder="<%= __("faq_page.form.email") %>" required>
                                    </p>
                                    <p>
                                        <input type="tel" name="phone" placeholder="<%= __("faq_page.form.phone") %>" required>
                                    </p>
                                    <p>
                                        <textarea rows="8" name="message" placeholder="<%= __("faq_page.form.message") %>" required></textarea>
                                    </p>
                                    <p>
                                        <input type="submit" class="button-white-border" name="submit" value="<%= __("faq_page.form.submit") %>">
                                    </p>
                                </form>
                                
                                <script>
                                    document.getElementById('faq-form').addEventListener('submit', function(e) {
                                        e.preventDefault(); // Emp√™che le rechargement
                                        
                                        // Affiche le message
                                        const messageDiv = document.getElementById('faq-message');
                                        messageDiv.style.display = 'block';
                                        
                                        // Envoie le formulaire en arri√®re-plan
                                        fetch('/faq-question', {
                                            method: 'POST',
                                            headers: {
                                                'Content-Type': 'application/x-www-form-urlencoded',
                                            },
                                            body: new URLSearchParams(new FormData(this))
                                        })
                                        .then(response => {
                                            if (response.ok) {
                                                // Vide le formulaire apr√®s envoi
                                                this.reset();
                                                // Change le message pour confirmation
                                                messageDiv.innerHTML = '<i class="fas fa-check-circle"></i> <%- __("faq_page.form.success_alt") %>';
                                                messageDiv.style.background = '#d4edda';
                                                messageDiv.style.color = '#155724';
                                            } else {
                                                messageDiv.innerHTML = '<i class="fas fa-exclamation-triangle"></i> <%- __("faq_page.form.error_message") %>';
                                                messageDiv.style.background = '#f8d7da';
                                                messageDiv.style.color = '#721c24';
                                            }
                                            
                                            // Fait dispara√Ætre le message apr√®s 7 secondes
                                            setTimeout(() => {
                                                messageDiv.style.display = 'none';
                                            }, 7000);
                                        })
                                        .catch(error => {
                                            messageDiv.innerHTML = '<i class="fas fa-exclamation-triangle"></i> <%- __("faq_page.form.error_connection") %>';
                                            messageDiv.style.background = '#f8d7da';
                                            messageDiv.style.color = '#721c24';
                                        });
                                    });
                                </script>
                            </div>
